<p style="color: green"><%= notice %></p>

<%= turbo_stream_from @room %>

<%= turbo_frame_tag "room" do %>
  <%= render @room %>

  <div>
    <%= link_to "Edit", edit_room_path(@room) %> |
    <%= link_to "Back", rooms_path, "data-turbo-frame": "_top"  %>
    <br><br>
    <%#= button_to "Destroy this room", @room, method: :delete, "data-turbo-frame": "_top"  %>
  </div>
<% end %>

<% if current_user && @room.users.ids.include?(current_user.id) %>
  <%= render "message_online_user", room: @room %>
<% end %>
